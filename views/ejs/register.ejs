        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $("select").change(function () {
                if ($(this).val() == "") $(this).css({ color: "gray" });
                else $(this).css({ color: "black" });
            });
        });
    </script>
